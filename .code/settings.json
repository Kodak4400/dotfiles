  // "intelephense.diagnostics.undefinedMethods": false,
  // "intelephense.diagnostics.undefinedProperties": false,
  // "intelephense.diagnostics.undefinedTypes": false,
  "[yaml]": {
    "editor.tabSize": 2
  },
  "indentRainbow.indentSetter": {
    "[javascript]": 2,
    "[typescript]": 2,
    "[ruby]": 2,
    "[php]": 4,
    "[python]": 4,
    "[go]": 2,
  },
  "yaml.schemas": {
    "https://d33vqc0rt9ld30.cloudfront.net/latest/gzip/CloudFormationResourceSpecification.json": [
        "*.cf.yaml",
        "*.cf.yml",
        "cloud*formation/*.yaml",
        "cloud*formation/*.yml"
    ]
  },
  "yaml.customTags": [
    "!Ref",
    "!Sub",
    "!Join sequence",
    "!FindInMap sequence",
    "!GetAtt scalar sequence",
    "!Base64 mapping",
    "!GetAZs",
    "!Select sequence",
    "!Split sequence",
    "!ImportValue",
    "!Condition",
    "!Equals sequence",
    "!And",
    "!If",
    "!Not",
    "!Or",
    "!And sequence",
    "!If sequence",
    "!Not sequence",
    "!Equals",
    "!Or sequence",
    "!FindInMap",
    "!Base64",
    "!Join",
    "!Cidr",
    "!Sub sequence",
    "!GetAtt",
    "!ImportValue sequence",
    "!Select",
    "!Split"
  ],
  // ** 拡張機能設定 **
  "liveServer.settings.port": 8100,
  "liveServer.settings.host": "localhost",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Dracula",
  // ** 拡張機能設定(Vim用) **
  "vim.statusBarColorControl": false,
  "vim.useSystemClipboard": true, // clipboardにコピーする
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.ignorecase": true, // 検索時に大文字小文字を無視する
  "vim.incsearch": true,
  "vim.camelCaseMotion.enable": true,
  "vim.visualstar": true, // カーソル上にあるワードを"*"で検索
  "vim.useCtrlKeys": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true
  },
  "go.formatTool": "gofmt",
  "window.zoomLevel": 1 // Ctrlキーを使った操作の有効化
}
