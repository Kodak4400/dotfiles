    // "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll.eslint"],
    // "cSpell.words": []
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  // * 以下はワークスペース毎に設定すること *
  // "python.linting.enabled": true,
